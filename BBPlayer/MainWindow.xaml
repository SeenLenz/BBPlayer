<Window x:Class="BBPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:userControls="clr-namespace:BBPlayer"
        mc:Ignorable="d"
        Height="450" Width="800" WindowStyle="None">
    <Window.Resources>

        <Style x:Key="Title" TargetType="Button">
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontWeight" Value="ExtraBold" />
            <Setter Property="Background" Value="#00000000"/>
            <Setter Property="Height" Value="50px"/>
            <Setter Property="FontFamily" Value="Comic sans MS"/>
            <Setter Property="Foreground" Value="#6E6E6E"/>
            <Setter Property="Content" Value="BBPlayer :)"/>
            <Setter Property="BorderThickness" Value="0px"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="10px,0px , 0px ,20px"/>
            <Setter Property="Padding" Value="0,0,0,0"/>

        </Style>

    </Window.Resources>
    <Border CornerRadius="20,20,20,20" Background="#FF151515">
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Rectangle Grid.ColumnSpan="2" Grid.RowSpan="2">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="Purple" Offset="0.0"/>
                        <GradientStop Color="Black" Offset="0.9"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <StackPanel Background="Black" Opacity="0.8" Grid.RowSpan="2">
                <Button Style="{StaticResource Title}"/>
            </StackPanel>
            <StackPanel Background="Black" Opacity="0.7" Grid.Row="2" Grid.Column="2">
            </StackPanel>

        </Grid>
    </Border>
</Window>