<Window x:Class="BBPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:userControls="clr-namespace:BBPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="ThreeDBorderWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="8*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition  Height="20*"></RowDefinition>
            <RowDefinition Height="3*">
            </RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Width="598" >
            <Button Content="Replay" Width="60px" Height="20px" Click="bt_Replay"/>
            <Button Content="Previous" Width="60px" Height="20px" Margin="5" Click="bt_Previous"/>
            <Button x:Name="bt_play" Content="Play" Width="60px" Height="20px" Margin="5" Click="bt_Play"/>
            <Button Content="Stop" Width="60px" Height="20px" Margin="5" Click="bt_Stop"/>
            <Button Content="Next" Width="60px" Height="20px" Margin="5" Click="bt_Next"/>
            <Button Content="ListDirs" Width="60px" Height="20px" Margin="5" Click="bt_ListDirectories"/>
            <Slider x:Name="Slider" Width="150" Height="18" Maximum="200"  />
            <Label x:Name="status" Content="0:00" />
        </StackPanel>
        <TextBlock Name="Directories" Grid.Column="0" TextWrapping="Wrap" Text="." VerticalAlignment="Center" Height="800"/>
        <Button Content="Add File" Width="60px" Height="20px" Click="bt_AddFolder" ></Button>
        <StackPanel Grid.Column="0" Grid.ColumnSpan="2"/>
        <ScrollViewer Grid.Column="1">
            <StackPanel >
                <userControls:SongRow />
                <userControls:SongRow />
                <userControls:SongRow />
                <userControls:SongRow />
                <userControls:SongRow />
                <userControls:SongRow />
                <userControls:SongRow />
                <userControls:SongRow />
                <userControls:SongRow />
                <userControls:SongRow />
                <userControls:SongRow />
                <userControls:SongRow />
                <userControls:SongRow />
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Window>