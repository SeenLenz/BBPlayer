<Window x:Class="BBPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:userControls="clr-namespace:BBPlayer"
        mc:Ignorable="d"
        Height="450" Width="800" WindowStyle="None">
    <Window.Resources>

        <Style x:Key="Title" TargetType="Button">
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontWeight" Value="ExtraBold" />
            <Setter Property="Background" Value="#00000000"/>
            <Setter Property="Height" Value="50px"/>
            <Setter Property="FontFamily" Value="Comic sans MS"/>
            <Setter Property="Foreground" Value="#6E6E6E"/>
            <Setter Property="Content" Value="BBPlayer :)"/>
            <Setter Property="BorderThickness" Value="0px"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="10px,0px , 0px ,10px"/>
            <Setter Property="Padding" Value="0,0,0,0"/>

        </Style>
        <Style x:Key="MenuButton1" TargetType="Button">
            <Setter Property="Content" Value="Local Files"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="Background" Value="#00000000"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Foreground" Value="#6E6E6E"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="10px,0px , 0px ,20px"/>
        </Style>
        <Style x:Key="MenuButton2" TargetType="Button">
            <Setter Property="Content" Value="Playlists"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="Background" Value="#00000000"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Foreground" Value="#6E6E6E"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="10px,0px , 0px ,20px"/>
        </Style>
        <Style x:Key="MenuButton3" TargetType="Button">
            <Setter Property="Content" Value="Favourites"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="Background" Value="#00000000"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Foreground" Value="#6E6E6E"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="10px,0px , 0px ,20px"/>
        </Style>
        <Style x:Key="AlbumCover" TargetType="Image">
            <Setter Property="Source" Value="img/Sanyi.png"/>
            <Setter Property="Grid.Row" Value="2"/>
            <Setter Property="Height" Value="80px"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Grid.Row" Value="2"/>
            <Setter Property="Margin" Value="10px, 0px, 0, 0"/>
        </Style>
        <Style x:Key="MusicTitle" TargetType="Label" >
            <Setter Property="Content" Value="AKC MISI - A szeretet él"/>
            <Setter Property="Margin" Value="10px, 10px , 0px , 50px"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Height" Value="20px"/>
            <Setter Property="Width" Value="100px"/>
            <Setter Property="FontSize" Value="12px"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="Foreground" Value="#6E6E6E"/>


        </Style>

    </Window.Resources>
    <Border CornerRadius="20,20,20,20" Background="#FF151515">
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Rectangle Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="0,-4,0,4">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="Purple" Offset="0.0"/>
                        <GradientStop Color="Black" Offset="0.9"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <StackPanel Background="Black" Opacity="0.8" Grid.RowSpan="2">
                <Button Style="{StaticResource Title}"/>
                <Button Style="{StaticResource MenuButton1}"/>
                <Button Style="{StaticResource MenuButton2}"/>
                <Button Style="{StaticResource MenuButton3}"/>
            </StackPanel>
            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" FlowDirection="LeftToRight">
                <Image Style="{StaticResource AlbumCover}"/>
                <Label Style="{StaticResource MusicTitle}"/>
            </StackPanel>
            <StackPanel Background="Black" Opacity="0.7" Grid.Row="2" Grid.Column="2">
  
            </StackPanel>

        </Grid>
    </Border>
</Window>